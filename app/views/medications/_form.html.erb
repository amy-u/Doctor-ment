<%= form_for(medication) do |f| %> <% if medication.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(medication.errors.count, "error" ) %> prohibited this
    medication from being saved:
  </h2>

  <ul>
    <% medication.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<form>
  <div class="form-group">
    <div class="col">
      <div class="field">
        <%= f.label :name %>
        <div class="text-lg-start"><%= f.text_field :name %></div>
      </div>

      <div class="field">
        <%= f.label :quantity %>
        <div class="text-lg-start"><%= f.text_field :quantity %></div>
      </div>

      <div class="field">
        <%= f.label :notes %>
        <div class="text-lg-start"><%= f.text_field :notes %></div>
      </div>

      <div class="field">
        <%= f.label :start_date %>
        <div class="text-lg-start">
          <%= f.text_field :start_date, class: 'form-control datepicker' %>
        </div>
      </div>

      <div class="field">
        <%= f.label :user_id %>
        <div class="dropdown">
          <button
            class="btn btn-info dropdown-toggle"
            type="button"
            id="dropdownMenuButton"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            Select Client Name
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <!-- Why does this work? instead of @User https://bit.ly/2WBuTBM -->
            <!-- <% User.all.each do |user| %> -->
            <a class="dropdown-item" href="<%= :user_id %>"> Testing </a>
            <!-- <% end %> -->
          </div>

          <div class="text-lg-start"><%= f.text_field :user_id %></div>
        </div>
      </div>
      <div class="action"><%= f.submit %></div>
    </div>
  </div>
</form>
<% end %>
